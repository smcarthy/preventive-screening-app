        brackets: { '18-20': 'N/A', '21-29': 'N/A', '30-39': 'N/A', '40-49': '➖', '50-59': '➕', '60+': '➕' } 
      },
      { 
        name: 'Cervical Cancer (Pap test)', 
        guideline: 'CTFPHC (2013)', 
        link: '#', 
        brackets: { '18-20': '✖', '21-29': '✖', '30-39': '✔', '40-49': '✔', '50-59': '✔', '60+': '✔' } 
